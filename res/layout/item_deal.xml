<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/dealpricebar"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@color/item_orange"
        android:paddingBottom="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp" >
        
        <TextView
            android:id="@+id/dealprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textIsSelectable="false"
            android:textSize="22dp"
            android:textStyle="bold" />

	    <TextView
	        android:id="@+id/dealvalue"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/dealprice"
	        android:focusable="false"
	        android:includeFontPadding="false"
	        android:shadowColor="#000000"
	        android:shadowDx="1"
	        android:shadowDy="1"
	        android:shadowRadius="1"
	        android:singleLine="true"
	        android:textColor="#ffffff"
	        android:textIsSelectable="false"
	        android:textSize="12dp"
	        tools:ignore="SmallSp" />
	
	    <TextView
	        android:id="@+id/dealdiscount"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="0dp"
	        android:background="@drawable/discount_dark"
	        android:focusable="false"
	        android:gravity="center"
	        android:includeFontPadding="false"
	        android:padding="0dp"
	        android:shadowColor="#000000"
	        android:shadowDx="1"
	        android:shadowDy="1"
	        android:shadowRadius="1"
	        android:singleLine="true"
	        android:textColor="#ffffff"
	        android:textIsSelectable="false"
	        android:textSize="12.5dp"
	        android:textStyle="bold" />
        
	</RelativeLayout>
    
    <TextView
        android:id="@+id/dealtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:focusable="false"
        android:textColor="#555555"
        android:textIsSelectable="false"
        android:textSize="11sp"
        tools:ignore="SmallSp" />
    
</LinearLayout>