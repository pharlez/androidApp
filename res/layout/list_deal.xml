<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp" >

    <!-- <RelativeLayout android:id="@+id/dealleft" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_alignParentLeft="true"> -->


    <!-- </RelativeLayout> -->

    <ImageView
        android:id="@+id/dealimage"
        android:layout_width="@dimen/image_thumbnail_width"
        android:layout_height="@dimen/image_thumbnail_height"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/dealprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dealimage"
        android:paddingLeft="3dp"
        android:textColor="#01466d"
        android:textIsSelectable="true"
        android:textSize="19sp"
        android:textStyle="bold"
        android:singleLine="true" />

    <TextView
        android:id="@+id/dealvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dealprice"
        android:paddingLeft="4dp"
        android:textColor="#8b8b8b"
        android:textIsSelectable="true"
        android:textSize="10sp"
        android:singleLine="true"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/dealdiscount"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignRight="@+id/dealimage"
        android:layout_below="@+id/dealimage"
        android:layout_marginRight="0dp"
        android:background="@drawable/discount"
        android:gravity="center"
        android:padding="0dp"
        android:shadowColor="#ffffff"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="#7cadad"
        android:textIsSelectable="true"
        android:textSize="11.5sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:includeFontPadding="false" />

    <TextView
        android:id="@+id/dealtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dealimage"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/dealimage"
        android:layout_toLeftOf="@+id/dealarrow"
        android:textColor="#555555"
        android:textIsSelectable="true"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/dealarrow"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="8dp"
        android:src="@drawable/ic_arrow" />

</RelativeLayout>