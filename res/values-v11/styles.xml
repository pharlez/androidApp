<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/AppActionBar</item>
    </style>
    
    <style name="AppActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
	    <item name="android:background">@drawable/actionbar_background</item>
	    <item name="android:icon">@drawable/home_logo</item>
	    <item name="android:displayOptions">useLogo|showHome</item>
	    <item name="android:titleTextStyle">@style/AppActionBarTitle</item>
	</style>
	
    <style name="AppActionBarTitle">
        <item name="android:textSize">19dp</item>
    	<item name="android:textColor">#808080</item>
  	</style>

</resources>